# Engram Environment Variables
# This file contains sensitive configuration that should not be in the main config file.
# Permissions: root:engram 640 (set by postinstall script)

# Required: API key for authenticating clients
# Generate a secure random key: openssl rand -hex 32
export ENGRAM_API_KEY=

# Required: OpenAI API key for embedding generation
# Get your key from: https://platform.openai.com/api-keys
export OPENAI_API_KEY=

# Configuration file path (set by default for system packages)
export ENGRAM_CONFIG_PATH=/etc/engram/engram.yaml

# Optional: Override log level (debug, info, warn, error)
# export ENGRAM_LOG_LEVEL=info

# Optional: Override log format (json, text)
# export ENGRAM_LOG_FORMAT=json
